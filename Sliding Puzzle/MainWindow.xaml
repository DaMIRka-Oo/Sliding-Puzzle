<Window x:Name="mainWindow" x:Class="Sliding_Puzzle.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sliding_Puzzle"
        mc:Ignorable="d"
        Title="MainWindow" Height="392" Width="289">
    <Grid Margin="0,0,52,57">
        <Canvas x:Name="canvas" HorizontalAlignment="Left" Height="352" VerticalAlignment="Top" Width="299" Margin="0,10,0,0">
            <Button x:Name="hard" Content="Hard" HorizontalAlignment="Left" VerticalAlignment="Top" Width="90" Height="30" FontFamily="Comic Sans MS" FontWeight="Bold" Canvas.Left="80" Canvas.Top="180" Click="hard_Click"/>
        </Canvas>
        <Button x:Name="easy" Content="Easy" HorizontalAlignment="Left" VerticalAlignment="Top" Width="90" Margin="80,60,0,0" Height="30" FontFamily="Comic Sans MS" FontWeight="Bold" Click="easy_Click"/>
        <Button x:Name="medium" Content="Medium" HorizontalAlignment="Left" VerticalAlignment="Top" Width="90" Margin="80,125,0,0" Height="30" FontFamily="Comic Sans MS" FontWeight="Bold" Click="medium_Click"/>

    </Grid>
</Window>
